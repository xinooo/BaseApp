<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:bottomLeftRadius="4dp"
                            android:bottomRightRadius="0dp"
                            android:topLeftRadius="4dp"
                            android:topRightRadius="0dp" />
                    <solid android:color="@color/colorAccent2" />
                    <stroke android:width="@dimen/space_d" android:color="@color/color_146478"/>
                </shape>
            </item>

            <item
                android:bottom="@dimen/space_d"
                android:left="@dimen/space_d"
                android:top="@dimen/space_d" >
                <shape android:shape="rectangle" >
                    <solid android:color="@color/color_6BB4BE" />
                    <corners android:bottomLeftRadius="4dp"
                        android:bottomRightRadius="0dp"
                        android:topLeftRadius="4dp"
                        android:topRightRadius="0dp" />
                </shape >
            </item >
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <corners android:bottomLeftRadius="4dp"
                            android:bottomRightRadius="0dp"
                            android:topLeftRadius="4dp"
                            android:topRightRadius="0dp" />
                    <solid android:color="@color/color_e" />
                    <stroke android:width="@dimen/space_d" android:color="@color/color_146478"/>
                </shape>
            </item>

            <item
                android:bottom="@dimen/space_d"
                android:left="@dimen/space_d"
                android:top="@dimen/space_d" >
                <shape android:shape="rectangle" >
                    <solid android:color="@color/color_e" />
                    <corners android:bottomLeftRadius="4dp"
                        android:bottomRightRadius="0dp"
                        android:topLeftRadius="4dp"
                        android:topRightRadius="0dp" />
                </shape >
            </item >
        </layer-list>
    </item>


</selector>