<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e"
    android:orientation="vertical">

    <com.BaseApp.Common.views.CommonTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您目前无任何记事，马上"
                android:textColor="@color/color_424A4A"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增几笔"
                android:textColor="@color/color_424A4A"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"
                android:textColor="@color/color_424A4A"
                android:textSize="16sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_40"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt"
            android:paddingTop="@dimen/space_7"
            android:paddingBottom="@dimen/space_7"
            android:paddingLeft="@dimen/space_36"
            android:paddingRight="@dimen/space_36"
            android:text="+  新增记事"
            android:textSize="15sp"
            android:textColor="@color/color_e"
            android:background="@drawable/a_view_newnote_btn_bg"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/note_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleBar"
        android:background="@color/color_e"
        android:visibility="gone"/>

</RelativeLayout>